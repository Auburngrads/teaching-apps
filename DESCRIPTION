          utils,knitr,leaflet,threejs,d3heatmap,plotly,htmlwidgets,dygraphs,
          networkD3,diagram,DiagrammeR,visNetwork,scales,data.table,miniUI,
          shinydashboard,d3Network,ggplot2,actuar,markdown,stats
NeedsCompilation: no
Archs: i386, x64
